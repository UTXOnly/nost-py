FROM python:3.11-alpine

WORKDIR /app
RUN apk update \
    && apk add --no-cache \
        gcc \
        libc-dev \
        g++ \
        make
COPY ws_requirements.txt .
RUN pip install --no-cache-dir -r ws_requirements.txt

COPY ./python_stuff/websocket*.py .

CMD ["python", "websocket_handler.py"]
